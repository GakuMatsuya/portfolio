<div class="container">

  <%#rowの幅を指定することで、値が変わってもレイアウトが崩れないようにする%>
  <div class="row-12 mt-4">
    <div class="row">
      <div class="col-8" style="line-height:2rem">
        <%= attachment_image_tag @user, :profile_image, format: "jpeg", size: "60x60", fallback: "no_image.jpg" %>
        <%= @user.name %> </br>
        <%= @user.introduction %>
      </div>
      <div class="col-3 offset-1 mt-5">
        <% if @user.id == current_user.id %>
          <%= link_to "プロフィールを編集", edit_user_path(@user) %>
        <% else %>
          <%= render "public/relationships/follow_button", user: @user %>
        <% end %>
      </div>
    </div>
  </div>

  <nav class="nav navbar-expand-md mt-3">
    <ul class="navbar-nav">
      <li>
        <p class="ml-4">フォロー</p>
        <%= link_to "#{@user.followings.count}人", followings_user_path(@user.id), class: "nav-link ml-4" %>
      </li>
      <li>
        <p class="ml-4">フォロワー</p>
        <%= link_to "#{@user.followers.count}人", followers_user_path(@user.id), class: "nav-link ml-4" %>
      </li>
      <li>
        <p class="ml-4">お気に入り</p>
      </li>
    </ul>
  </nav>

  <% @user.reviews.each do |review| %>
    <div class="card mb-3 mt-4 offset-2" style="max-width: 40rem;">
      <div class="card-body text-dark">
        <p><%= l review.created_at %></p>
        <%= attachment_image_tag review.item, :image, format: "jpeg", size: "60x60", fallback: "no_image.jpg", class: "card-title" %>
        <p calss="card-text"><%= review.text %></p>
      </div>
    </div>
  <% end %>
</div>