<div class="container">

  <div class="row offset-4 mt-3">
    <h4>プロフィール編集</h4>
  </div>

  <%= form_with model: @user, url: user_path(@user.id), local:true do |f| %>
  <%= render "layouts/error_messages", model: f.object %>

  <div class="row-2 mt-3 offset-4">
    <p>ユーザー画像</p>
    <%= attachment_image_tag @user, :profile_image, format: "jpeg", size: "60x60", fallback: "no_image.jpg" %>
    <%= f.attachment_field :profile_image, class: "mt-3" %>
  </div>

  <div class="row-3 offset-4 mt-4">
    <p>ユーザー名</p>
    <%= f.text_field :name %>
  </div>

  <div class="row-3 offset-4 mt-4">
    <p>プロフィール</p>
    <%= f.text_area :introduction, size: "40x10", placeholder: "自己紹介文を記入しましょう!" %>
  </div>

  <div class="row mt-4 offset-4 mb-5">
      <%= f.submit "編集内容を保存", class: "btn btn-outline-success" %>
      <%= link_to "退会する", unsubscribe_user_path(@user), class: "btn btn-outline-danger offset-1" %>
  </div>
  <% end %>
</div>