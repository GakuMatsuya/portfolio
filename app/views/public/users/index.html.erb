<div class="container">
  <h4 class="mt-5">ユーザー一覧</h4>
  
    <table class="table mt-5" width="100%">
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>プロフィール</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td width="10%">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, format: "jpeg", size: "60x60", fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td width="15%"><%= user.name %></td>
            <td width="75%"><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>