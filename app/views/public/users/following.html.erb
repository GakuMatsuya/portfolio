<div class="container">
  <h4 class="mt-5">フォロー中</h4>
 
  <% if @users.present? %>
    <table class="table mt-3" width="100%">
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>プロフィール</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td width="10%">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, format: "jpeg", size: "60x60", fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td width="15%"><%= user.name %></td>
            <td width="75%"><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h4 class="text-center mt-5 mb-5" style="color: gray;">フォロー中のユーザーはいません</h4>
  <% end %>
</div>
