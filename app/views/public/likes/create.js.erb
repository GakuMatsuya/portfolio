<%#id=likes_buttons_<%= @review.idのHTMLを、renderで更新%>
$("#likes_buttons_<%= @review.id %>").html("<%= j(render "public/likes/like", review: @review) %>");

<%#新しくいいねをした後のいいね数を表示%>
$("#like_count_<%= @user.id %>").html('<%= link_to "#{@user.likes.count}件", likes_user_path(@user), class: "nav-link ml-4" %>');

<%#flashメッセージを非同期で更新%>
$(".flash").html("<%= j(render("layouts/flash")) %>");