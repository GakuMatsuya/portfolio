<% if current_user.liked_by?(review.id) %>
  <%= link_to "#{review.likes.count}", destroy_like_path(review), method: :delete, class: "fas fa-heart", style: "color: red;", remote: true %> <%#js形式でリクエストを送る%>
<% else %>
  <%= link_to "#{review.likes.count}", create_like_path(review), method: :post, class: "far fa-heart", remote: true %>
<% end %>