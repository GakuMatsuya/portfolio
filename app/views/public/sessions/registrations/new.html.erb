<div class="container">
  
  <div class="row offset-2">
    <div class="mt-3"><h5>新規登録</h5></div>
  </div>

<%= form_with model: @user, url: user_registration_path, local: true  do |f| %>
<%= render "layouts/error_messages", model: f.object %>

  <div class="row offset-3 mt-4">
    <div class="col-3"><p>ユーザー名</p></div>
    <div class="col-3"><%= f.text_field :name %></div>
  </div>

  <div class="row offset-3 mt-4">
    <div class="col-3"><p>メールアドレス</p></div>
    <div class="col-9"><%= f.email_field :email %></div>
  </div>

  <div class="row offset-3 mt-4">
    <div class="col-3"><p>パスワード(6文字以上)</p></div>
    <div class="col-9"><%= f.text_field :password %></div>
  </div>

  <div class="row offset-3 mt-4">
    <div class="col-3"><p>パスワード(確認用)</p></div>
    <div class="col-9"><%= f.text_field :password_confirmation %></div>
  </div>

  <div class="row offset-3 mt-5">
    <%= f.submit "新規登録", class: "btn btn-outline-success offset-3" %>
  </div>
<% end %>

  <div class="row offset-5">
    <div class="mt-5"><h6>既に登録済みの方</h6></div>
  </div>

   <div class="row mt-3 offset-5 col-5">
  <%= link_to "こちら", new_user_session_path, class: "text-primary" %> <p>からログイン</p>
  </div>
</div>