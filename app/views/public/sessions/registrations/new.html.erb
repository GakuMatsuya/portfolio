<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5>新規登録</h5></div>
  </div>

<%= form_with model: @user, url: user_registration_path, local: true  do |f| %>
  <div class="row mt-3">
    <div class="col-3"><p>ユーザー名</p></div>
    <div class="col-3"><%= f.text_field :name %></div>
  </div>
  
  <div class="row mt-3">
    <div class="col-3"><p>メールアドレス</p></div>
    <div class="col-3"><%= f.email_field :email %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>パスワード(6文字以上)</p></div>
    <div class="col-3"><%= f.text_field :password %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>パスワード(確認用)</p></div>
    <div class="col-3"><%= f.text_field :password_confirmation %></div>
  </div>

  <div class="row mt-3">
    <%= f.submit "新規登録", class: "btn btn-outline-success offset-3 col-2" %>
  </div>
<% end %>

  <div class="row">
    <div class="mt-3 bg-light"><h5>既に登録済みの方</h5></div>
  </div>

   <div class="row mt-3 offset-1 col-5">
  <%= link_to "こちら", new_user_session_path %> <p>からログインしてください</p>
  </div>
</div>