<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h5>ログイン</h5></div>
  </div>
  
  <%= render "layouts/flash" %>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="row mt-4">
      <div class="col-2"><%= f.label "メールアドレス" %></div>
      <div class="col-10"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row mt-2">
      <div class="col-2"><%= f.label "パスワード" %></div>
      <div class="col-10"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="row mt-3">
      <%= f.submit "ログイン", class: "btn btn-outline-primary offset-2" %>
    </div>
  <% end %>

  <div class="row">
    <div class="mt-5 bg-light"><h6>登録がお済みでない方</h6></div>
  </div>

  <div class="row mt-3 offset-1 col-5">
  <%= link_to "こちら", new_user_registration_path %> <p>から新規登録を行ってください</p>
  </div>

</div>