<div class="container">

  <div class="row offset-2">
    <div class="mt-3"><h5>ログイン</h5></div>
  </div>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="row offset-3 mt-4">
      <div class="col-3"><%= f.label "メールアドレス" %></div>
      <div class="col-9"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row offset-3 mt-4">
      <div class="col-3"><%= f.label "パスワード" %></div>
      <div class="col-9"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="row offset-3 mt-5">
      <%= f.submit "ログイン", class: "btn btn-primary offset-3", data: {confirm: "20歳以上ですか? 本サイトは酒類を扱うため、20歳未満の方のご利用は禁止しております。"} %>
    </div>
  <% end %>

  <%= link_to " Googleアカウントでログイン", user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-danger text-white mt-5 offset-2 fab fa-google" %>
  <%= link_to " twitterでログイン", user_twitter_omniauth_authorize_path, method: :post, class: "btn btn-info text-white mt-5 offset-2 fab fa-twitter" %>

  <div class="row offset-5">
    <div class="mt-5"><h6>登録がお済みでない方</h6></div>
  </div>

  <div class="row mt-3 offset-5">
    <%= link_to "こちら", new_user_registration_path, class: "text-primary" %><p>から登録</p>
  </div>
</div>