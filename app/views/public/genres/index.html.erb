<div class="container">
  
  <% @items.each do |item| %>
    <div class="card mb-3 mt-5 offset-2" style="max-width: 40rem;">
      <div class="row card-body">
        <div class="col-3">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, format: "jpeg", size: "200x220" %>
          <% end %>
        </div>
        
        <div class="col-8 mt-5 offset-1">
          <div class="row">
            <div class="col-4"><p>商品名</p></div>
            <div class="col-6"><%= item.name %></div>
          </div>
          
          <div class="row">
            <div class="col-4"><p>商品説明</p></div>
            <div class="col-6"><%= item.introduction %></div>
          </div>
          
          <% reviews = Review.where("item_id = #{item.id}") %>
          <div class="row">
            <div class="col-4"><p>口コミ<%= reviews.count %>件</p></div>
            <div class="average<%= item.id %>" data-score="<%= @average_review %>"></div>
            <%= render 'public/reviews/rate', item: item %> 
            <div class="ml-4" style="color: gold; font-size: 20px; font-weight: bold; "><%= @average_review %>点</div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>