<div class="container">
  <h2 class="mt-5">検索結果</h2>
  <%= render "public/items/search_form" %>
  <%= link_to "一覧画面に戻る", items_path, class: "offset-10 text-primary" %>

  <% if @items.present? %>
    <% @items.each do |item| %>
      <div class="card mb-3 mt-5 offset-1" style="max-width: 60rem;">
        <div class="row card-body">
          <div class="col-3">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, format: "jpeg", size: "200x220" %>
            <% end %>
          </div>

          <div class="col-8 mt-5 offset-1">
            <div class="row">
              <div class="col-3"><p>商品名</p></div>
              <div class="col-9"><%= item.name %></div>
            </div>

            <div class="row">
              <div class="col-3"><p>商品説明</p></div>
              <div class="col-9"><%= item.introduction %></div>
            </div>

            <div class="row mt-3">
              <div class="col-3"><p>口コミ<%= item.count %>件</p></div>
              <% if item.average != nil %>
                <div class="average<%= item.id %>" data-score="<%= item.average.round(1) %>"></div>
                <%= render 'public/reviews/rate', item: item %>
                <div class="ml-4" style="color: gold; font-size: 20px; font-weight: bold; "><%= item.average.round(1) %>点</div>
              <% else %>
                <div class="average<%= item.id %>" data-score="0"></div>
                <%= render 'public/reviews/rate', item: item %>
                <div class="ml-4" style="color: gold; font-size: 20px; font-weight: bold; ">－点</div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h4 class="text-center mt-5" style="color: gray;">一致する商品がありません</h4>
  <% end %>
</div>