<div class="container">
  <h2 class="mt-3 title">New review</h2>

  <%= form_with model: [@item, @review], url: item_reviews_path, local:true do |f| %>
  <%= render "layouts/error_messages", model: f.object %>

  <div class="row mt-5 offset-3" id="star">
    <%= f.label :rate, class: "col-1 mr-5" %>
    <%= f.hidden_field :rate %>
  </div>
  <%#= render "public/reviews/rate" %>
  <div class="row mt-5 offset-3">
    <%= f.label :コメント, class: "mr-5" %>
    <%= f.text_area :text, size: "40x5" %>
  </div>
  <div class="row mt-5 offset-3">
  <%= f.submit "投稿する", :class=>"btn offset-2 btn-outline-success" %>
  </div>
  <% end %>
</div>


<%#id=starに対して発火%>
<script>
  $("#star").raty({
    starOff: "<%= asset_path('star-off.png') %>",
    starOn: "<%= asset_path('star-on.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: "review[rate]",
    half: true
  });
</script>