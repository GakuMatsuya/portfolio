<%#id=starに対して発火。新規投稿で呼び出す%>
<script>
  $("#star").raty({
    starOff: "<%= asset_path('star-off.png') %>",
    starOn: "<%= asset_path('star-on.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: "review[rate]",
    half: true,
  });
</script>

<%#class=rateに対して発火。投稿一覧で呼び出す%>
<script>
  $('.rate').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    starOff: "<%= asset_path('star-off.png') %>",
    starOn: "<%= asset_path('star-on.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>"
  });
</script>


