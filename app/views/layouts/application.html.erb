<!DOCTYPE html>
<html>
  <head>
    <title>DORIBA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-md">
    <div class="container">
      <ul class="navbar-nav navbarapplication_controller-right">
        <% if admin_signed_in? %>
          <li>
            <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "ユーザー一覧", admin_users_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li>
            <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
    
  <nav class="navbar navbar-expand-md">
    <div class="container">
      <ul class="navbar-nav navbarapplication_controller-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "タイムライン", admin_items_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "マイページ", user_path(current_user.id), class: "nav-link" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
          <%# 後ほどハンバーガーメニューを追加%>
          <li>
            <%= link_to "メニュー" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
  <%= yield %>
  </body>
</html>
