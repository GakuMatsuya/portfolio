<!DOCTYPE html>
<html>
  <head>
    <title>DORIBA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/690c473fa7.js" crossorigin="anonymous"></script>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="footerFixed">
      <header>
        <nav class="navbar navbar-expand-md">
          <div class="container">
            <ul class="navbar-nav">
              <li>
                <%= link_to "/" do %>
                  <img src="<%= asset_path 'logo.png' %>", width="160px" height="70px" %>
                <% end %>
              </li>
            </ul>

            <ul class="navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "タイムライン", timeline_user_path(current_user.id), class: "nav-link" %>
                </li>
                <li>
                  <%= link_to "マイページ", user_path(current_user.id), class: "nav-link" %>
                </li>
                <li>
                  <%= link_to "ユーザー一覧", users_path, class: "nav-link" %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
                </li>
                <li>
                  <%= render "layouts/menu" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
                </li>
                <li>
                  <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </header>

      <main>
        <% if flash %>
          <div class="flash"><%= render "layouts/flash" %></div>
        <% end %>
        <%= yield %>
      </main>

      <footer>
        <%= render "layouts/footer" %>
      </footer>
    </div>
  </body>
</html>
