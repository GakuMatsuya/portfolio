<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h4><%= @user.name %>さんのユーザー情報編集</h4></div>
  </div>
  
  <div class="row mt-3">
    <div class="col-3"><p>会員ID</p></div>
    <div class="col-3"><%= @user.id %></div>
  </div>
  
  <%#ユーザー名,メールアドレス,自己紹介文は管理者が変更できないようにする %>
   <div class="row mt-3">
    <div class="col-3"><p>ユーザー名</p></div>
    <div class="col-3"><%= @user.name %></div>
  </div>

  <div class="row mt-3">
    <div class="col-3"><p>メールアドレス</p></div>
    <div class="col-3"><%= @user.email %></div>
  </div>
  
  <div class="row mt-3">
    <div class="col-3"><p>プロフィール</p></div>
    <div class="col-3"><%= @user.introduction %></div>
  </div>
  
  <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
  
  <div class="row mt-3">
    <div class="col-3"><p>ユーザーステータス</p></div>
    <div class="col-3">
      <%= f.radio_button :is_active, "effectiveness" %>
      <%= f.label :is_active, "有効", {value: :TRUE} %>
      <%= f.radio_button :is_active, "withdrawn" %>
      <%= f.label :is_active, "退会済み", {value: :FALSE} %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="btn btn-sm btn-wrape btn-success offset-3 col-2">
      <%= f.submit "変更を保存", :class=>"btn text-white" %>
    </div>
  </div>
  <% end %>