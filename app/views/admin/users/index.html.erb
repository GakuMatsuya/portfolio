<%= render "layouts/admin_header" %>

<div class="container">
  <div class="row">
     <div class="mt-3 bg-light"><h4>ユーザー一覧</h4></div>

  <table class="table mt-3">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
        <%= link_to admin_user_path(user) do %>
          <%= user.name %>
        <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.is_active_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>