<div class="container">
  <h4 class="mt-3">ユーザー一覧</h4>

  <table class="table mt-5">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
        <%= link_to edit_admin_user_path(user) do %>
          <%= user.name %>
        <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= user.is_active_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>