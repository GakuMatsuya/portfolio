<div class="container">
  <div class="row">
    <div class="mt-3"><h4>商品一覧</h4></div>
  </div>

  <div class="text-right"><%= button_to "＋", {controller: "admin/items", action: "new"}, method: :get %></div>

  <table class="table mt-3">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>ジャンル</th>
        <th>レビュー数</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.reviews.count %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>