<%= render "layouts/admin_header" %>

<div class="container">
  <div class="row">
    <div class="mt-3 bg-light"><h4>商品新規登録</h4></div>
  </div>

  <%= form_with model: @item, url:'/admin/items', local:true do |f| %>
  <div class="row mt-3">
    <div class="col-2"><p>商品画像</p></div>
    <div class="col-8"><%= f.attachment_field :image %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>商品名</p></div>
    <div class="col-8"><%= f.text_field :name %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>商品説明</p></div>
    <div class="col-8"><%= f.text_area :introduction %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>ジャンル</p></div>
    <div class="col-8"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></div>
  </div>

  <div class="row mt-3">
    <div class="btn btn-sm btn-wrape btn-success offset-2">
      <%= f.submit "商品登録", :class=>"btn text-white" %>
    </div>
  </div>
  <% end %>
</div>