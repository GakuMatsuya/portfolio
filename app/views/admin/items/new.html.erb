<div class="container">
<%= render "layouts/flash" %>

  <div class="row">
    <div class="mt-3"><h4>商品新規登録</h4></div>
  </div>

  <%= form_with model: @item, url:'/admin/items', local:true do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
  <div class="row mt-3">
    <div class="col-2"><p>商品画像</p></div>
    <div class="col-8"><%= f.attachment_field :image %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>商品名</p></div>
    <div class="col-8"><%= f.text_field :name %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>商品説明</p></div>
    <div class="col-8"><%= f.text_area :introduction, size: "40x10" %></div>
  </div>

  <div class="row mt-3">
    <div class="col-2"><p>ジャンル</p></div>
    <div class="col-8"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></div>
  </div>

  <div class="row mt-3">
    <%= f.submit "商品登録", :class=>"btn btn-outline-success offset-3" %>
  </div>
  <% end %>
</div>