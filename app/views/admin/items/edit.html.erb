<div class="container">
  <h4 class="mt-3">商品編集</h4>

  <%= form_with model: @item, url: admin_item_path(@item), local:true do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
    <div class="row mt-5">
      <div class="col-2"><p>商品画像</p></div>
      <div class="col-8"><%= f.attachment_field :image %></div>
    </div>

    <div class="row mt-3">
      <div class="col-2"><p>商品名</p></div>
      <div class="col-8"><%= f.text_field :name %></div>
    </div>

    <div class="row mt-3">
      <div class="col-2"><p>説明</p></div>
      <div class="col-8"><%= f.text_area :introduction %></div>
    </div>

    <div class="row mt-3">
      <div class="col-2"><p>ジャンル</p></div>
      <div class="col-8"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></div>
    </div>

    <div class="row mt-3">
      <%= f.submit "変更を保存", class:"btn btn-success offset-2" %>
    </div>
  <% end %>
</div>