<div class="container">
<%= render "layouts/flash" %>
  
  <div class="row">
    <div class="mt-3"><h4>管理者用ログイン</h4></div>
  </div>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
    <div class="row mt-4">
      <div class="col-2"><%= f.label "メールアドレス" %></div>
      <div class="col-10"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row mt-2">
      <div class="col-2"><%= f.label "パスワード" %></div>
      <div class="col-10"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="row mt-3">
      <%= f.submit "ログイン", class: "btn btn-outline-primary offset-2" %>
    </div>
  <% end %>
</div>